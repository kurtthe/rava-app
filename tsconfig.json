{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": [
			"es6",
			"dom",
			"dom.iterable"
		],
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
		"allowJs": true,
		"jsx": "react",
		"outDir": "./dist/",
		"noEmit": false,
		"isolatedModules": false ,
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"paths": {
      "@custom-elements/*": ["src/app/custom-elements/*"],
      "@custom-sections/*": ["src/app/custom-sections/*"],
      "@shared/*": ["src/app/shared/*"],
      "@routes/*": ["src/app/routes/*"],
      "@assets/*": ["src/assets/*"],
      "@core/*": ["src/app/core/*"],
      "@pages/*": ["src/app/pages/*"],
      "@env": ["src/environments/environment"],
    }
	},
	"exclude": ["node_modules"],
	"include": ["src/*", "src/config/settings.ts"]
}
