{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": [
			"es6",
			"dom",
			"dom.iterable"
		],
		"allowJs": true,
		"jsx": "react",
		"outDir": "./dist/",
		"noEmit": false,
		"isolatedModules": false ,
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"paths": {
      "@components": ["src/infrastructure/web/components/*"],
      "@pages/*": ["src/infrastructure/web/pages/*"]
    }
	},
	"exclude": ["node_modules"],
	"include": ["src/*", "src/config/settings.ts"]
}
